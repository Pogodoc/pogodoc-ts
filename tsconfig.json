{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "src/test.ts",
    "node_modules",
    "**/*.spec.ts",
    ".env",
    "src/tests"
  ]
}
